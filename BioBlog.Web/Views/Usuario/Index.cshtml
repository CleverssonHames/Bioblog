@{
    ViewData["Title"] = "Usuários";
}

<div class="d-flex flex-column justify-content-center align-items-center" style="height: calc(100vh - 134px)">
    <p class="fs-4 fw-bold">Entre com sua conta</p>
    @if (ViewBag.Fail == true)
    {
        <div class="alert alert-danger" role="alert">
            Usuário ou senha incorreto!
        </div>
    }
    <form asp-controller="Usuario" asp-action="Login" method="post" class="w-25">
        <div class="mb-3">
            <label for="email" class="form-label fw-medium">Endereço de e-mail:</label>
            <input type="email" class="form-control" name="Email" id="email" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="senha" class="form-label d-flex justify-content-between fw-medium">
                Senha:
                <a href="#" class="">Esqueceua senha??</a>
            </label>
            <input type="password" class="form-control" name="Senha" id="senha" placeholder="********">
        </div>
        <input type="submit" value="Entrar" class="form-control bg-success text-white"/>
    </form>
    <div class="mt-3 text-center">
        <p>Não tem usuário? <a asp-controller="Usuario" asp-action="AddUsuario" class="fw-medium">Cadastre-se agora!</a></p>
    </div>
</div>



